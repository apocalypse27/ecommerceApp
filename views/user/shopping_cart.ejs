	<script src="../public/scripts/js/main.js"></script>
	<script> 
		<% for (var i=0;i< productDetails.length;i++){ %>
			$("#qty_<%=i%>").change(function(){
				var quantity= $("#qty_<%=i%>").val();
				var price=  ($("#price_<%=i%>").val()).replace(/[\$]/g, '');
				var total = quantity * price;
				$("#total_<%=i%>").html("$"+total);
			});
		<%}%>	
	</script>

