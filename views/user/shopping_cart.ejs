     <h1>Shopping Cart</h1>
	
		</div>
</div>
</div>

	<!-- Shoping Cart -->
	<form class="bg0 p-t-75 p-b-85"  action="/shopping_cart" method="POST">
		<div class="">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">Product</th>
									<th class="column-2"></th>
									<th class="column-3">Price</th>
									<th class="column-3">Quantity</th>
									<th class="column-3">Total</th>
								</tr>
								
								<% for (var i=0;i< productDetails.length;i++){ %>
								<tr class="table_row">
									<td class="column-1">
										<div class="how-itemcart1">
											<img src="<%=productDetails[i][2]%>" alt="IMG">
										</div>
									</td>
									<td class="column-2"><%=productDetails[i][0]%></td>
									<td class="column-3">
										<input id="price_<%=i%>" type="text" value="$ <%=productDetails[i][1]%>" disabled="disabled">
									</td>
									<td class="column-3">
										<input class="qty" id ="qty_<%=i%>" type="number" name="quantity" value="1" >
									</td>
									
									<td  id="total_<%=i%>" >$<%= 1* productDetails[i][1]%>

									</td>
									
									<td class="column-3">
										<a href='/shopping_cart/<%=productDetails[i][3] %>'>remove</a>
									</td>
								</tr>
								
								<%}%>								
							</table>
							
						</div> <br>

						<div class="header-cart-buttons flex-w w-full">

						<button  id ="submit" class="btn btn-primary" style="width:30%; margin:20px auto;">Checkout</button>
							
					
					</div>
						
					</div>
				</div>

				
			</div>
		</div>
	</form>
		
	
		

	

	<!-- Back to top -->
