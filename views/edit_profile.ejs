<% include partials/header %>
<div id="Edit Profile">
<div class="container">
    <div style="width:30%; margin:20px auto;">
        
     <h1>Edit Profile</h1>
        <form action="/edit_profile" method="POST">
            <div class="form-group">
                <label>Username</label>
                <input id ="uname" class="form-control" type="hidden" name="username" value="<%= currentUser.username %>" ></input>
                <input id ="uname" class="form-control" type="text" name="username" value="<%= currentUser.username %>" disabled="disabled"></input>
            </div>

            <div class="form-group">
                <label>Email Id</label>
                <input id="emailid" class="form-control" type="text" name="emailid" value="<%= currentUser.email %>" disabled="disabled"></input>
            </div>

            <!--<div class="form-group">
                <input id="password" class="form-control" type="password" name="password" value="<%= currentUser.hash %>"></input>
            </div>-->

            <div class="form-group">
                <label>First Name</label>
                <input id="firstname" class="form-control" type="text" name="fname" placeholder="First Name"></input>
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input id="lastname" class="form-control" type="text" name="lname" placeholder="Last Name"></input>
            </div>

            <div>
            <label>Gender</label></br>
            <input type="radio" name="gender" value="male"> Male
  			<input type="radio" name="gender" value="female"> Female
  			</div>

            </br>
            <div class="form-group">
                <label>Date Of Birth</label>
                <input id="dob" class="form-control" type="text" name="dob" placeholder="Date of Birth"></input>
            </div>

            <div class="form-group">
                <label>Mobile Number</label>
                <input id="mnumber" class="form-control" type="text" name="mnumber" placeholder="Mobile Number"></input>
            </div>

            <div class="form-group">
                <label>Address</label>
                <input id="address" class="form-control" type="text" name="address" placeholder="Address"></input>
            </div>

             <div class="form-group">
                   <button  id ="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
</div>
<script src="/scripts/validateLogin.js"></script>
<% include partials/footer %>